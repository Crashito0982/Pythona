import os
from datetime import datetime

import pandas as pd
from sqlConn import sqlConn

# ======================================================
# CONFIGURACIÓN
# ======================================================

EXCEL_PATH = r"/home/leonardd/Plexus/BRITIMP/BaseParametrica_modelo_agencias.xlsx"
PREDEF_CONN = "AT_CMDTS"


# ======================================================
# HELPERS
# ======================================================

def limpiar_columna_numerica(serie, decimales=None):
    """
    Convierte una serie a numérico:
      - Quita espacios
      - Convierte "" y "-" a NULL
      - Quita separador de miles "."
      - Convierte coma decimal "," a "."
      - Convierte a número (no numérico -> NaN)
      - Aplica redondeo si se indica
    """
    serie = serie.astype(str).str.strip()
    serie = serie.replace({"": None, "-": None})
    serie = serie.str.replace(".", "", regex=False)
    serie = serie.str.replace(",", ".", regex=False)
    serie = pd.to_numeric(serie, errors="coerce")
    if decimales is not None:
        serie = serie.round(decimales)
    return serie


def truncar_tabla(conn, tabla):
    """
    Intenta TRUNCATE TABLE. Si falla, muestra el error y sigue.
    """
    try:
        sql = f"TRUNCATE TABLE {tabla}"
        conn.cnxn.execute(sql)
        try:
            conn.cnxn.commit()
        except Exception:
            pass
        print(f"[{tabla}] TRUNCATE OK")
    except Exception as e:
        print(f"[{tabla}] ERROR en TRUNCATE: {e}")


# ======================================================
# HOJA: DATOS  -> PLXS_BASE_PARAMETRICA_MODELO_AGENCIAS_DATOS
# ======================================================

def cargar_datos():
    tabla = "PLXS_BASE_PARAMETRICA_MODELO_AGENCIAS_DATOS"
    hoja = "Datos"

    df = pd.read_excel(EXCEL_PATH, sheet_name=hoja)

    if df.empty:
        print(f"[{tabla}] Hoja '{hoja}' vacía. No se insertan datos.")
        return

    # Limpiar y redondear columnas numéricas
    df["Milaje"] = limpiar_columna_numerica(df["Milaje"], 2)
    df["Precio Km"] = limpiar_columna_numerica(df["Precio Km"], 0)
    df["Kms"] = limpiar_columna_numerica(df["Kms"], 0)
    df["Costo KM"] = limpiar_columna_numerica(df["Costo KM"], 0)

    # Renombrar columnas al esquema de la tabla
    rename_map = {
        "Agencias_Transportadora": "AGENCIAS_TRANSPORTADORAS",
        "Agencias_Transportadoras": "AGENCIAS_TRANSPORTADORAS",  # por si viene así
        "Agencia": "AGENCIA",
        "Proveedor": "PROVEEDOR",
        "Milaje": "MILAJE",
        "Precio Km": "PRECIO_KM",
        "Kms": "KMS",
        "Costo KM": "COSTO_KM",
    }
    df = df.rename(columns=rename_map)

    # Seleccionar columnas en el orden esperado
    columnas_finales = [
        "AGENCIAS_TRANSPORTADORAS",
        "AGENCIA",
        "PROVEEDOR",
        "MILAJE",
        "PRECIO_KM",
        "KMS",
        "COSTO_KM",
    ]
    df = df[columnas_finales]

    # Agregar FECHA_CREACION
    df["FECHA_CREACION"] = datetime.now()

    conn = sqlConn(predef_conn=PREDEF_CONN, agendado=False)
    try:
        truncar_tabla(conn, tabla)
        conn.crea_tabla(df, tabla, if_exists="append")
        print(f"[{tabla}] Insertados {len(df)} registros.")
    finally:
        try:
            conn.desconecta()
        except Exception:
            pass


# ======================================================
# HOJA: PARAMETROS -> PLXS_BASE_PARAMETRICA_MODELO_AGENCIAS_PARAMETROS
# ======================================================

def cargar_parametros():
    tabla = "PLXS_BASE_PARAMETRICA_MODELO_AGENCIAS_PARAMETROS"
    hoja = "Parametros"

    df = pd.read_excel(EXCEL_PATH, sheet_name=hoja)

    if df.empty:
        print(f"[{tabla}] Hoja '{hoja}' vacía. No se insertan datos.")
        return

    # Limpiar y redondear VALOR (6 decimales)
    df["Valor"] = limpiar_columna_numerica(df["Valor"], 6)

    # Renombrar columnas
    rename_map = {
        "Parametros": "PARAMETROS",
        "Valor": "VALOR",
    }
    df = df.rename(columns=rename_map)

    columnas_finales = [
        "PARAMETROS",
        "VALOR",
    ]
    df = df[columnas_finales]

    df["FECHA_CREACION"] = datetime.now()

    conn = sqlConn(predef_conn=PREDEF_CONN, agendado=False)
    try:
        truncar_tabla(conn, tabla)
        conn.crea_tabla(df, tabla, if_exists="append")
        print(f"[{tabla}] Insertados {len(df)} registros.")
    finally:
        try:
            conn.desconecta()
        except Exception:
            pass


# ======================================================
# HOJA: SEGURO -> PLXS_BASE_PARAMETRICA_MODELO_AGENCIAS_SEGURO
# ======================================================

def cargar_seguro():
    tabla = "PLXS_BASE_PARAMETRICA_MODELO_AGENCIAS_SEGURO"
    hoja = "Seguro"

    df = pd.read_excel(EXCEL_PATH, sheet_name=hoja)

    if df.empty:
        print(f"[{tabla}] Hoja '{hoja}' vacía. No se insertan datos.")
        return

    # Limpiar numéricos (sin redondeo especial)
    df["Cod. Ag."] = limpiar_columna_numerica(df["Cod. Ag."], None)
    df["Seguro Caja"] = limpiar_columna_numerica(df["Seguro Caja"], None)

    # Renombrar columnas
    rename_map = {
        "AGENCIA_BASE": "AGENCIA_BASE",
        "Cod. Ag.": "COD_AG",
        "Agencia": "AGENCIA",
        "Seguro Caja": "SEGURO_CAJA",
    }
    df = df.rename(columns=rename_map)

    columnas_finales = [
        "AGENCIA_BASE",
        "COD_AG",
        "AGENCIA",
        "SEGURO_CAJA",
    ]
    df = df[columnas_finales]

    df["FECHA_CREACION"] = datetime.now()

    conn = sqlConn(predef_conn=PREDEF_CONN, agendado=False)
    try:
        truncar_tabla(conn, tabla)
        conn.crea_tabla(df, tabla, if_exists="append")
        print(f"[{tabla}] Insertados {len(df)} registros.")
    finally:
        try:
            conn.desconecta()
        except Exception:
            pass


# ======================================================
# ORQUESTADOR
# ======================================================

def run():
    if not os.path.isfile(EXCEL_PATH):
        raise FileNotFoundError(f"No se encontró el Excel en: {EXCEL_PATH}")

    print("Iniciando carga de base paramétrica (AT_CMDTS)...")
    cargar_datos()
    cargar_parametros()
    cargar_seguro()
    print("Proceso finalizado.")


if __name__ == "__main__":
    run()
